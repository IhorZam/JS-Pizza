<div class="order-form">
    <div class="order-body">
        <form id="login-form" action="mainPage.ejs" method="post" role="form" class="rf" style="display: block;">
            <h2>Оформлення</h2>
            <div class="form-group">
                <input type="text" name="username" id="username" tabindex="1" class="form-control rfield" placeholder="Ім'я" value="">
            </div>
            <div class="form-group">
                <input type="text" name="address" id="address" tabindex="2" class="form-control rfield" placeholder="Адреса">
            </div>
            <div class="form-group">
                <input type="text" name="telephone" id="telephone" tabindex="3" class="form-control rfield" placeholder="Телефон">
